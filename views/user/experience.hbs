      <label for="inputNameCompany">Nombre de la empresa:</label>
      <input type="text" class="form-control" id="inputNameCompany">
    </div>
     <div class="form-group col-md-6">
      <label for="inputJobTitle">Cargo:</label>
      <input type="text" class="form-control" id="inputJobTitle">
    </div>
    <div class="form-group col-md-3">
      <label for="inputStartDate">Fecha de inicio:</label>
      <input type="date" class="form-control" id="inputStartDate">
    </div>
    <div class="form-group col-md-3">
      <label for="inputEndDate">Fecha de culminación:</label>
      <input type="date" class="form-control" id="inputEndDate">
    </div>
</div>
</div>
